<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.juncode.pruebawham.Activities.InicioActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_wham"
            android:layout_gravity="center_horizontal"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="80dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo Electronico:"
                    android:textColor="#FFF"/>

                <EditText
                    android:id="@+id/et_ini_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:theme="@style/colorAcentBlanco"
                    android:layout_marginBottom="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña:"
                    android:textColor="#FFF"/>

                <EditText
                    android:id="@+id/et_ini_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:theme="@style/colorAcentBlanco"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btn_ini_Iniciar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iniciar"
                    android:theme="@style/Miraisedbtn"/>

                <ProgressBar
                    android:id="@+id/ProgressBarIniciar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/tv_ini_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿No tienes cuenta?, crea una aquí"
                    android:gravity="center_horizontal"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</LinearLayout>
